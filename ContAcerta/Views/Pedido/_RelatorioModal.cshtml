
@using ReportViewerForMvc;
@model ContAcerta.Models.RelatorioViewModel

<div id="modalRelatorio" class="modal fade" style="z-index: 9999">
    <div class="modal-dialog" style="width: 100%; height:100% !important">
        <div class="modal-content" style="height:100% !important">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h3>Emissão de Relatório</h3>
            </div>
            <div class="modal-body" style="height:100% !important">
                @Html.ReportViewer(Model.Relatorio, new
           {
               @style = "background-color: white; width: 100% !important; height: 100% !important;"
           })
            </div>

        </div>
    </div>
</div>