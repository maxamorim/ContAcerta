@model IEnumerable<ContAcerta.Models.Pedido>

@{
    ViewBag.Title = "Pedidos";
}

<h2>Pedidos</h2>
<br />
<table id="pedidosTable" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DcPedido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Data)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DcPedido)
                </td>
                <td>
                    R$@Html.DisplayFor(modelItem => item.Valor)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-success" })
                    @Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new { @class = "btn btn-info" })
                    @Html.ActionLink("Deletar", "Delete", new { id = item.Id }, new { @class = "btn btn-warning" })
                </td>
            </tr>

        }
    </tbody>

</table>

@section Scripts {
    @Scripts.Render("~/bundles/pedidos-datatable")
}

